<%= form_with(model: [recipe, ingredient], local: true) do |form| %>
  <div class="field">
    <%= form.label :element %>
    <%= form.text_field :element, id: :ingredient_element %>
  </div>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.text_field :quantity, id: :ingredient_quantity %>
  </div>

  <div class="field">
    <%= form.label :metric_measurement %>
    <%= form.text_field :metric_measurement, id: :ingredient_metric_measurement %>
  </div>

  <div class="actions">
    <%= form.submit("Save Ingredient") %>
  </div>
<% end %>
